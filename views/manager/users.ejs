<% layout('../layout') %>

<div class="row users-list">
    <div class="col-md-12">
        <div class="list-group">
        <% users.forEach((user) => { %>
            <div class="list-group-item row">
                <div class="col-md-7">
                    <%= user.facebook.name %>
                </div>
                <div class="col-md-2">
                    <%= user.vCoin %>
                </div>
                <div class="col-md-3">
                    <form class="form-inline" method="post" action="/manager/users/<%= user._id %>/refill">
                        <input type="number" class="form-control vcoin" name="amount" size="6"/>
                        <button type="submit" class="btn" >Додати</button>
                    </form>
                </div>
            </div>
        <% }); %>
        </div>
    </div>
</div>